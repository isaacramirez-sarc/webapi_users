{% extends 'base.html.twig' %}

{% block title %}Task Scheduler{% endblock %}

{% block body %}
    <h1>Task Schedule</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ task_schedule.id }}</td>
            </tr>
            <tr>
                <th>Script_path</th>
                <td>{{ task_schedule.scriptPath }}</td>
            </tr>
            <tr>
                <th>Time_execution</th>
                <td>{{ task_schedule.timeExecution }}</td>
            </tr>
            <tr>
                <th>Outputlog_path</th>
                <td>{{ task_schedule.outputlogPath }}</td>
            </tr>
            <tr>
                <th>Can_init</th>
                <td>{{ task_schedule.canInit ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ task_schedule.status }}</td>
            </tr>
            <tr>
                <th>Last_execution_time</th>
                <td>{{ task_schedule.lastExecutionTime ? task_schedule.lastExecutionTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_task_schedule_index') }}">back to list</a>

    <a href="{{ path('app_task_schedule_edit', {'id': task_schedule.id}) }}">edit</a>

    {{ include('task_schedule/_delete_form.html.twig') }}
{% endblock %}
